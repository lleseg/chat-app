<main class="bg-slate-800 h-screen flex flex-col justify-center gap-10">
  <section class="flex flex-col items-center gap-1">
    <%= image_tag('chat.png', width: 100) %>
    <h1 class="font-bold text-4xl text-white my-4">Chat App built with Ruby</h1>
    <p class="text-center font-semibold text-white">This is an app created that uses RoR</p>
  </section>
  <section class="flex flex-col items-center">
    <h2 class="text-white font-bold text-2xl my-5">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'flex flex-col') do |f| %>
      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :email, class: 'text-right mr-2 text-white font-semibold text-sm w-24' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :password, class: 'text-right mr-2 text-white font-semibold text-sm w-24' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="flex gap-1 my-5 items-center justify-center">
        <%= f.submit "Log in", data: { turbo: false }, class: 'bg-green-800 rounded p-3 text-white font-semibold' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </section>
</main>
